{
  "name": "kolay",
  "version": "0.0.3",
  "description": "",
  "keywords": [
    "documentation",
    "docs",
    "docgen",
    "generator",
    "build",
    "plugin",
    "plugins",
    "ember"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:universal-ember/kolay.git"
  },
  "license": "MIT",
  "author": "NullVoxPopuli",
  "type": "module",
  "exports": {
    ".": {
      "types": "./declarations/browser/re-exports.d.ts",
      "import": "./src/browser/re-exports.js",
      "default": "./src/browser/re-exports.js"
    },
    "./build": {
      "types": "./declarations/plugins/index.d.ts",
      "import": "./src/plugins/index.js"
    },
    "./webpack": {
      "types": "./declarations/plugins/webpack.d.ts",
      "import": "./src/plugins/webpack.js"
    },
    "./vite": {
      "types": "./declarations/plugins/vite.d.ts",
      "import": "./src/plugins/vite.js"
    },
    "./build/legacy": {
      "types": "./declarations/plugins/legacy/index.d.cts",
      "default": "./src/plugins/legacy/index.cjs"
    }
  },
  "files": [
    "src",
    "declarations"
  ],
  "scripts": {
    "prepack": "pnpm build:declarations",
    "fix": "pnpm lint:fix && pnpm --filter docs-app lint:fix",
    "lint": "pnpm turbo _:lint",
    "lint:fix": "pnpm turbo _:lint:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit --emitDeclarationOnly false",
    "lint:package": "publint",
    "lint:prettier": "prettier . --check",
    "lint:prettier:fix": "prettier . --write",
    "lint:published-types": "attw --pack",
    "build": "pnpm prepack",
    "build:declarations": "tsc",
    "_syncPnpm": "pnpm sync-dependencies-meta-injected",
    "test": "vitest"
  },
  "dependencies": {
    "@universal-ember/kolay-ui": "workspace:^",
    "globby": "^14.0.0",
    "unplugin": "^1.6.0"
  },
  "dependenciesMeta": {
    "@universal-ember/kolay-ui": {
      "injected": true
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.9",
    "@glimmer/component": "^1.1.2",
    "@nullvoxpopuli/eslint-configs": "^3.2.2",
    "@tsconfig/node20": "^20.1.2",
    "@tsconfig/strictest": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^8.2.2",
    "ember-source": "~5.5.0",
    "eslint": "^8.56.0",
    "pnpm-sync-dependencies-meta-injected": "^0.0.10",
    "prettier": "^3.1.1",
    "publint": "^0.2.7",
    "release-plan": "^0.7.0",
    "turbo": "^1.12.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">= 18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "webpack",
        "rsvp"
      ]
    }
  },
  "volta": {
    "node": "20.10.0",
    "pnpm": "8.13.1"
  },
  "peerDependencies": {
    "@ember/test-waiters": "^3.1.0",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "@glint/template": "^1.3.0",
    "ember-modifier": "^4.1.0",
    "ember-primitives": "^0.11.3",
    "ember-resources": "^7.0.0",
    "ember-source": "~5.5.0"
  }
}
